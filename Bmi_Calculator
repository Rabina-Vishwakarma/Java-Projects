    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
         float H,W,tot;
         String s="";
         H = Float.parseFloat(h.getText())/100;
         W = Float.parseFloat(w.getText());
         tot= W /(H*H);
         s=s+""+(String.format("%.2f", tot));
         if(tot <18.5)
         {
             s=s+" "+"UnderWeight";
         }
         else if(tot >=18.5 && tot<=24.9)
         {
             s=s+" "+"NormalWeight";
         }
         else if(tot>=25&& tot<=29.9)
         {
             s=s+" "+"Overweight";
         }
         else
         {
             s=s+" "+"Obesity";
         }
         res.setText(s);
    }                                        

